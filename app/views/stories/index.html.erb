<h1 class="title">故事列表</h1>

<% @stories.each do |story|%>
    <div class="content">
        <h2 class="title">
            <%= story.title %>
            <%= content_tag :span, '已發佈', class: 'tag is-primary' if story.status=='published' %>
        </h2>
        <p><%=  story.content %></p>
        <p>
            最後編輯時間: <%= time_ago_in_words(story.updated_at) %>
            <%= link_to '編輯', edit_story_path(story), class: 'button is-text is-small' %>
            <%= link_to '刪除', story, class: 'button is-danger is-small', data: {turbo_method: :delete, turbo_confirm: '確認刪除?'} %>
        </p>
    </div>
    <hr>
<% end %>
